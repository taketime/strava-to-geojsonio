<!DOCTYPE html >
<html>
<head>
  <meta charset='UTF-8'/>
  <title>Strava to geojson.io</title>
  <link href='//mapbox.com/base/latest/base.css' rel='stylesheet' />
</head>
<body>

<h2>Last 100 Strava Activities (runs or rides)</h2>

<table id="activities">
    <tr>
        <td>Date</td>
        <td>Activity Name</td>
        <td>Type</td>
    </tr>
    <% _(activities).each(function(act) { %>
    <tr>
        <td><%= act.start_date %></td>
        <td><a href="/activity/<%= act.id %>"><%= act.name %></a></td>
        <td><%= act.type %></td>
    </tr>
    <% }); %>
</table>

<!-- TODO add deauth button -->

</body>
</html>
